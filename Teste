local player = game.Players.LocalPlayer

-- Criar Hub
local gui = Instance.new("ScreenGui", player.PlayerGui)
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 220, 0, 100)
frame.Position = UDim2.new(0.5, -110, 0.5, -50)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.Active = true
frame.Draggable = true

local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(0.8, 0, 0, 60)
button.Position = UDim2.new(0.1, 0, 0.2, 0)
button.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Text = "Ativar Kill ao Tocar"
button.Font = Enum.Font.SourceSansBold
button.TextScaled = true

local ativo = false

button.MouseButton1Click:Connect(function()
    ativo = not ativo
    if ativo then
        button.Text = "Kill ao Tocar: Ativo"
    else
        button.Text = "Ativar Kill ao Tocar"
    end
end)

-- Loop pra detectar colis√£o
game:GetService("RunService").Stepped:Connect(function()
    if not ativo then return end
    local char = player.Character
    if not char then return end
    local hrp = char:FindFirstChild("HumanoidRootPart")
    if not hrp then return end

    for _, plr in pairs(game.Players:GetPlayers()) do
        if plr ~= player and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
            local humanoid = plr.Character:FindFirstChildOfClass("Humanoid")
            local hrpInimigo = plr.Character:FindFirstChild("HumanoidRootPart")

            if humanoid and hrpInimigo then
                local distancia = (hrp.Position - hrpInimigo.Position).Magnitude
                if distancia < 5 then
                    plr.Character:BreakJoints() -- Mata de verdade
                end
            end
        end
    end
end)

-- Efeito Rainbow üåà
spawn(function()
    local hue = 0
    while true do
        hue = (hue + 0.01) % 1
        local cor = Color3.fromHSV(hue, 1, 1)
        frame.BackgroundColor3 = cor
        button.BackgroundColor3 = cor
        wait(0.05)
    end
end)
